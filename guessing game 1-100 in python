import random
flag=0
print("hey wellcom to my guessing game")
print("u wil need to guss a number from 1-100")
print("Good Luck!!")
pc_number=random.randint(1,100)
print (pc_number)
while(flag==0):
    User_number= int (input ("please enter a number:"))
    if User_number<=0 or User_number >=101:
        User_number = input("please choose a number from 1-100")
    else:
     if User_number==pc_number:
         print("Good job!!")
         flag=1

    if User_number>pc_number:
     print("you are above the number")
    if User_number < pc_number:
     print("you are below the number")

